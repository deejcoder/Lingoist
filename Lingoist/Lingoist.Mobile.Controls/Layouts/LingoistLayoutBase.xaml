<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:blocks="clr-namespace:Lingoist.Mobile.UI.LayoutBlocks"
             xmlns:local="clr-namespace:Lingoist.Mobile.UI.Layouts"
             x:Name="this"
             x:Class="Lingoist.Mobile.UI.Layouts.LingoistLayoutBase">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <blocks:LingoistLayoutHeader Title="{Binding Title, Source={x:Reference this}, x:DataType=local:LingoistLayoutBase}" />

        <!-- Content -->
        <Grid Grid.Row="1">
            <ContentView x:Name="LayoutContentContainer" />
        </Grid>
        
        <!-- Footer -->
        <blocks:LingoistLayoutFooter IsFooterVisible="{Binding IsFooterVisible, Source={x:Reference this, x:DataType=local:LingoistLayoutBase}}" 
                                     Content="{Binding FooterContent, Source={x:Reference this, x:DataType=local:LingoistLayoutBase}}" />
    </Grid>
</ContentView>
